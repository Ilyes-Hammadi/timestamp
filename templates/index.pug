          <label for="unix-time">Unix Time</label>
          <input id="unix-time" class="form-control" type="number" name="unix-time">
          <br>
          <label for="date-time">Date</label>
          <input id="date-time" class="form-control" type="date" name="unix-time">
          <br>
          <button id="send-btn" class="btn btn-primary" type="button" name="send">Get Time</button>
        </div>
